@{
    ViewBag.Title = "Home Page";
}
<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block" src="https://images.pexels.com/photos/2249063/pexels-photo-2249063.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" alt="First slide" width="100%" height="100%">
            <div class="carousel-caption ">
                <h1>Library WebMVC</h1>
                <h3>This is a page for people to search for books and which library the book is at</h3>
            </div>
        </div>
    </div>
</div>
<br />
<br/>
<br/>
<br/>
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th class="text-center lead" colspan="2">Data Tables</th>
            <th>Link</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th class="lead">User</th>
            <th>You can add, view, edit and delete users</th>
            <th>@Html.ActionLink("Users", "Index", "Person")</th>
        </tr>
        <tr>
            <th class="lead">Book</th>
            <th>You can add, view, edit and delete books</th>
            <th>@Html.ActionLink("Libraries", "Index", "Libraryy")</th>
        </tr>
        <tr>
            <th class="lead">Library</th>
            <th>You can add, view, edit and delete library</th>
            <th>@Html.ActionLink("Books", "Index", "Book")</th>
        </tr>

    </tbody>
</table>

